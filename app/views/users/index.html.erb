<h1>Users#index</h1>

<!--User info-->
<!--プロフィール編集ボタン-->
<!--New book-->
<%= render 'user_info', user: @user, newbook: @newbook%>

<!--Users-->
<h2>Users</h2>
  <div>
    <table>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image(80,80) %></td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
