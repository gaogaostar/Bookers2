<h1>Users#show</h1>

<!--User info-->
<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>

<!--プロフィール編集ボタン-->
<div>
  <% if @user.id == current_user.id %>
    <%= link_to edit_user_path(@user) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% else %>
    <%= link_to user_path(current_user.id) do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>
</div>

<!--New book-->
<%= render 'books/new_book', newbook: @newbook %>


<!--そのユーザーの投稿一覧[Books]-->
<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>