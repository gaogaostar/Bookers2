<h1>Users#show</h1>

<!--User info-->
<!--プロフィール編集ボタン-->
<!--New book-->
<%= render 'user_info', user: @user, newbook: @newbook %>


<!--そのユーザーの投稿一覧[Books]-->
<div>
  <h2>Books</h2>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(80,80) %></td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>