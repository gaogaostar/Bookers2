<h1>books#index</h1>

<!--User info-->
<!--プロフィール編集ボタン-->
<!--New book-->
<%= render 'users/user_info', user: @user, newbook: @newbook %>

<!--Books 投稿一覧-->
<h2>Books</h2>
  <div>
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(80,80) %>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
