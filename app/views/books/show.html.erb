<h1>books#show</h1>

<!--User info-->
<!--プロフィール編集ボタン-->
<!--New book-->
<%= render 'users/user_info', user: @book.user, newbook: @newbook %>

<!--Book detail bookの詳細ページ-->
<h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100) %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        <td><%= @book.body %></td>
        <td>
          <!--Editボタン-->
          <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book.id) %></td>
          <% end %>
        <td>
          <!--Destroyボタン-->
          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>